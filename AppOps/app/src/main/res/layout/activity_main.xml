<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/primeiro">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/imagemcoracao"/>

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/imagemenina" />
</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Step"
        android:textSize="30dp"
        android:textColor="#ffff"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="   Lets connect your data \n through Apple Hearth Kit "
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#ffff"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="CONNECT"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/botaocon"
        android:textColor="#ffff"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:background="@drawable/botaobranco"
        android:text="SEE SUPPORTED DEVICES"
        android:textColor="#ffff"/>

</LinearLayout>