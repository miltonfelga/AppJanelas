<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fotomontanha"
    android:orientation="vertical"
    tools:context=".Janeladois_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/corfundo2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/coracaovermelho" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textSize="20sp"
            android:textColor="@color/corfundo"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textSize="20sp"
            android:textColor="@color/corfundo"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="@color/fonte"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:layout_marginBottom="40dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login"
            android:textColor="@color/corfundo"
            android:textSize="20sp"
            android:background="@drawable/botaobranco"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_gravity="center">

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/linhapreta"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR CONNECT WITH"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/linhapreta"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/botaoazul"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/face"
                android:text="Facebook"
                android:textColor="@color/fonte"
                android:textSize="20sp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/botaogoogle"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/goog"
                android:text="Google"
                android:textColor="@color/fonte"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>